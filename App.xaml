<?xml version="1.0" encoding="utf-8"?>
<Application
    x:Class="VideoTools.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:VideoTools">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <!-- Other merged dictionaries here -->
            </ResourceDictionary.MergedDictionaries>
            <!-- Other app resources here -->
            <ResourceDictionary.ThemeDictionaries>
                <!-- Light Theme -->
                <ResourceDictionary x:Key="Light">
                    <SolidColorBrush x:Key="ComboBoxBackground" Color="#FFFFFF"/>
                    <SolidColorBrush x:Key="ComboBoxForeground" Color="#333333"/>
                    <SolidColorBrush x:Key="GridBackground" Color="#FFFFFF"/>
                    <SolidColorBrush x:Key="Background" Color="#FFFFFF"/>
                    <SolidColorBrush x:Key="Foreground" Color="#333333"/>
                    <SolidColorBrush x:Key="BorderColor" Color="#555555"/>
                </ResourceDictionary>
                <!-- Dark Theme -->
                <ResourceDictionary x:Key="Dark">
                    <SolidColorBrush x:Key="ComboBoxBackground" Color="#111111"/>
                    <SolidColorBrush x:Key="ComboBoxForeground" Color="#FFFFFF"/>
                    <SolidColorBrush x:Key="GridBackground" Color="#111111"/>
                    <SolidColorBrush x:Key="Background" Color="#111111"/>
                    <SolidColorBrush x:Key="Foreground" Color="#FFFFFF"/>
                    <SolidColorBrush x:Key="BorderColor" Color="#555555"/>
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>

            <!-- Style for ComboBox -->
            <Style TargetType="ComboBox" x:Key="ParamComboBoxStyle">
                <Setter Property="Margin" Value="5"/>
                <Setter Property="HorizontalAlignment" Value="Stretch"/>
                <Setter Property="Background" Value="{ThemeResource ComboBoxBackground}"/>
                <Setter Property="Foreground" Value="{ThemeResource ComboBoxForeground}"/>
            </Style>
            <!-- Style for TextBlock Labels -->
            <Style TargetType="TextBlock" x:Key="LabelTextblockStyle">
                <Setter Property="Margin" Value="0,10,0,0"/>
                <Setter Property="HorizontalAlignment" Value="Right"/>
            </Style>
            <!-- Style for Process Buttons -->
            <Style TargetType="Button" x:Key="AppButtonStyle">
                <Setter Property="Margin" Value="5,5,5,5"/>
                <Setter Property="Padding" Value="10,5"/>
                <Setter Property="HorizontalAlignment" Value="Stretch"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>